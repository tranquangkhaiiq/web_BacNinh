
@{
    ViewBag.Title = "_Login";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link href="~/Content/css/Login_Style.css" rel="stylesheet" />
<div class="container" style="width:100%;background-color: white; margin-top: 40px; border-radius: 4px 4px; box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.32);">

    <div class="omb_login">
        <h3 class="omb_authTitle "><a>Giải mã </a></h3>
        <div class="row omb_row-sm-offset-3 omb_socialButtons">
            
        </div>
        <span class="help-block">@Session["ThongbaoLogin"]</span>
        @using (Html.BeginForm("_giaima", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
           
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-6">
                    <form class="omb_loginForm" action="" autocomplete="off" method="post">
                        <span class="text-center text-danger">@Session["Thongbaogiaima"]</span>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input value="@ViewBag.usernamegm" type="text" class="form-control" name="username" placeholder="Tên tài khoản" required>
                        </div>
                        <span class="help-block"></span>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input value="@ViewBag.Passwordgm" type="text" class="form-control" name="Pass" placeholder="Mật khẩu" required>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input value="" type="text" class="form-control" name="Salt" placeholder="Salt" required>
                        </div>
                        <span class="help-block">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">GetPass</button>

                    </form>

                </div>

            </div>
        }
    </div>
</div>



